<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loveFragment">

    <fragment
        android:id="@+id/loveFragment"
        android:name="com.example.lovecalculate.LoveFragment"
        android:label="fragment_love"
        tools:layout="@layout/fragment_love" >
        <action
            android:id="@+id/action_loveFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.lovecalculate.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.lovecalculate.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result" />
</navigation>